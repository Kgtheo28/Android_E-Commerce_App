                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/more_info_button"
                    android:gravity="center"
                    android:text="R200"
                    android:textSize="20dp"
                    android:textStyle="bold" />

