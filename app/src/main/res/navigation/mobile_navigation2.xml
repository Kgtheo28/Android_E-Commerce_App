<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation2"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.firebaseproducttester.ui.activities.activities.ui.home.HomeFragment"
        android:label="Shopping Items"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.firebaseproducttester.ui.activities.activities.ui.gallery.GalleryFragment"
        android:label="Shopping Cart"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.firebaseproducttester.ui.activities.activities.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <activity
        android:id="@+id/nav_user_profile_details"
        android:name="com.example.firebaseproducttester.ui.activities.activities.UserProfileDetailActivity"
        android:label="@string/menu_user_profile_details"
        tools:layout="@layout/activity_user_profile_detail" />

    <include app:graph="@navigation/mobile_navigation" />
</navigation>